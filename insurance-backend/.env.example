# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/insurance_db

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=change_this_to_a_secure_random_string_minimum_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change_this_to_different_secure_random_string
JWT_REFRESH_EXPIRE=30d
COOKIE_EXPIRE=7
COOKIE_SECURE=false
RESET_PASSWORD_EXPIRE=10m

# ============================================
# CORS & FRONTEND CONFIGURATION
# ============================================
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WHITELIST=127.0.0.1,::1
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,application/pdf
MAX_FILES_PER_UPLOAD=5

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=noreply@sanlam.rw
EMAIL_FROM_NAME=Sanlam Allianz Insurance
SUPPORT_EMAIL=support@sanlam.rw
ADMIN_EMAIL=admin@sanlam.rw

# ============================================
# PAYMENT GATEWAY
# ============================================
MOMO_API_KEY=your_momo_api_key
MOMO_API_SECRET=your_momo_api_secret
PAYMENT_PUBLIC_KEY=your_payment_public_key
PAYMENT_SECRET_KEY=your_payment_secret_key

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_REQUEST_LOGGING=true

# ============================================
# BUSINESS CONFIGURATION
# ============================================
DEFAULT_POLICY_CURRENCY=RWF
MIN_POLICY_AMOUNT=10000
AUTO_APPROVE_CLAIM_THRESHOLD=50000
TAX_RATE=0.18
ADMIN_FEE_PERCENTAGE=0.02

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
VERBOSE_ERRORS=true
MAINTENANCE_MODE=false